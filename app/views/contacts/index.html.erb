<h1>All Contacts</h1>

<p><%= link_to 'Add a contact', new_contact_path %></p>
<%# new(inner directory)
_contact(outer directory)
_path  %>

<table>

  <tr>
    <th>Name</th>
    <th>Phone</th>
  </tr>

  <% @contacts.each do |c| %>
  <tr>
    <td><%= c.name %></td>
    <td><%= c.phone %></td>
    <td><%= link_to 'Show', contact_path(c) %></td>
    <td><%= link_to 'Edit', edit_contact_path(c) %></td>
    <td><%= link_to 'Delete', contact_path(c),
            method: :delete,
            data: { confirm: 'Really Delete?' } %>
    </td>
  </tr>
  <% end %>
</table>
